<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Set AppCompat’s actionBarStyle -->
        <item name="actionBarStyle">@style/ActionBarTheme</item>

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorControlNormal">@android:color/white</item>

    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.Toolbar">

        <item name="color">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--<item name="colorControlNormal">?actionBarIconColor</item>-->
        <!--<item name="actionButtonStyle">@style/ActionBar.ActionButton</item>-->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <!--<item name="colorControlHighlight">@color/colorSecondary</item>-->
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.Button.Borderless">
    </style>
    <style name="ImageButton.Secondary">
        <item name="android:alpha">@dimen/alpha_light_disabled</item>
    </style>

    <style name="DialogButtonBar" parent="Widget.AppCompat.ButtonBar">
        <item name="android:gravity">right</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.Borderless">
    </style>

    <style name="DialogButton.Primary">
        <item name="android:textColor">?colorPrimary</item>
    </style>
</resources>
